: ${BEE_LIBEXECDIR=@LIBEXECDIR@}

function fix_deprecated_FILES_file() {
    local dir=${1}
    local ff
    local pkg
    local cf

    for ff in $(find ${dir} \
                     -mindepth 2 \
                     -maxdepth 2 \
                     -type f \
                     -name FILES \
                     -printf "%P\n") ; do

        pkg=${ff%/FILES}
        cf="${pkg}/CONTENT"

        if [ ! -e "${dir}/${cf}" ] ; then
            ${BEE_LIBEXECDIR}/bee/compat-filesfile2contentfile \
               "${dir}/${ff}" \
               >"${dir}/${cf}.$$"
            mv "${dir}/${cf}.$$" "${dir}/${cf}"
        fi
        mv "${dir}/${ff}" "${dir}/${ff}.deprecated"
    done
}

############################################################################

metadirs=( "${@}" )

: ${metadirs=${BEE_METADIR}}

if [ -z "${metadirs}" ] ; then
    echo >&2 "$0: BEE_METADIR not set"
    exit 1
fi

for dir in "${metadirs[@]}" ; do
    if [ ! -d "${dir}" ] ; then
        continue
    fi
    fix_deprecated_FILES_file "${dir}"
done
