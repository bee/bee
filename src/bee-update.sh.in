    echo >&2 "BEE-ERROR: please call $0 from bee .."
    exit 1
fi

VERSION=${BEE_VERSION}

: ${BEE_LIBEXECDIR:=@LIBEXECDIR@}

exec ${BEE_LIBEXECDIR}/bee/bee.d/bee-install --update ${@}
