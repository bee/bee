# this needs to be forced for now
if [ ${BEE_BUILDTYPE} != "r-package" ] ; then
    return
fi

BEE_BUILDTYPE_DETECTED="r-package"

: ${R:=R}

RHOME=$(${R} RHOME)

RLIBRARY="${RHOME}/library"

#### bee_install() ############################################################

bee_install() {
    start_cmd mkdir -p ${D}/${RLIBRARY}
    start_cmd ${R} CMD INSTALL -l ${D}/${RLIBRARY} ${S}
}
